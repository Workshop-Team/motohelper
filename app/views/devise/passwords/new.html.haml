= devise_error_messages!
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f|
  %h4= t('devise.sessions.user.forgot_your_password')
  = f.email_field :email, autofocus: true, class: 'form-control devise-form', placeholder: true
  .actions
    = f.submit t('devise.passwords.reset_password_instruction'), class: 'btn btn-primary'
  = render "devise/shared/links"
