= devise_error_messages!
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: 'form-signin' }) do |f|
  %h4= t('devise.registrations.sign_up')
  = f.text_field :name, class: 'form-control devise-form', placeholder: true
  = f.select( :language, User.languages.map { |k, _v| [k, k] }, {}, { class: 'form-control devise-form' })
  = f.email_field :email, autofocus: true, class: 'form-control devise-form', placeholder: true
  = f.password_field :password, class: 'form-control devise-form', placeholder: true
  = f.password_field :password_confirmation, class: 'form-control devise-form', placeholder: true
  .actions
    = f.submit t('devise.registrations.sign_up'), class: 'btn btn-primary'
  = render 'devise/shared/links'