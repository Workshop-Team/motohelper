= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f|
  %h4= t('devise.registrations.sign_in')
  = f.email_field :email, autofocus: true, class: 'form-control devise-form', placeholder: true
  = f.password_field :password, class: 'form-control devise-form', placeholder: true
  - if devise_mapping.rememberable?
    = f.check_box :remember_me
    = f.label :remember_me
  .actions
    = f.submit t('devise.registrations.sign_in'), class: 'btn btn-primary'
  = render "devise/shared/links"
