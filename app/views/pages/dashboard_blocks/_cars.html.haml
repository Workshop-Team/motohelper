%p.card-text
  %table.table
    %thead
      %tr
        %th{ scope: 'col' }= Car.model_name.human
        %th
        %th
          =  link_to new_car_path, class: 'btn btn-success btn-sm text-white' do
            = content_tag(:i, nil, class: 'fa fa-plus')
            = t('add')

    %tbody
      - data[:cars].each do |car|
        %tr
          %td= car.name
          %td
            = link_to car,
            method: :delete,
            data: { confirm: t('are_you_sure') },
            class: 'btn btn-secondary btn-sm text-white' do
              = content_tag(:i, nil, class: 'fa fa-times')
              = t('destroy')
          %td
            = link_to edit_car_path(car), class: 'btn btn-secondary btn-sm text-white' do
              = content_tag(:i, nil, class: 'fa fa-pencil')
              = t('edit')
