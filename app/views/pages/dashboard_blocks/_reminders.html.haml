%h4 #{ t('.last_added') } (#{ link_to t('.all'), reminders_path })

%table.table.table-sm
  %thead
    %tr
      %th{scope: 'col'} #{ t('.name') }
      %th{scope: 'col'} #{ t('.car') }
  %tbody
    - data[:reminders].each do |reminder|
      %tr
        %td= link_to reminder.name, reminder
        %td=  reminder.car.decorate.name
