.text-center
  %button.btn.btn-primary{onclick: "Dashboard.setLocation()"}
    = t('.update_location')
#position_info
#carouselExampleControls.carousel.slide{"data-ride" => "carousel",  "data-interval" => "7000"}
  .carousel-inner
    - data[:closest_service].keys.each_with_index do |type_of_place, index|
      .carousel-item{class: index == 0 ? 'active' : nil}
        .service-box
          %h5= t(".#{type_of_place}")
          - if data[:closest_service][type_of_place].empty?
            %h6= t('.not_found')
          %table.table.table-hover
            %tbody
              - data[:closest_service][type_of_place].first(2).each do |service|
                %tr
                  %td
                    #{service['name']}
                    .adress-font #{service['vicinity']}
                  %td
                    .align-middle
                      %button.btn.btn-light{:type => "button"} #{I18n.t('see')}
  %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleControls", :role => "button"}
    %span.carousel-control-prev-icon{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleControls", :role => "button"}
    %span.carousel-control-next-icon{"aria-hidden" => "true"}
    %span.sr-only Next
