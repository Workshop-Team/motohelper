.autopagerize_page_element
  %table.table.table-hover
    %thead
      %tr
        %th{scope: 'col'}= Car.model_name.human
        %th{scope: 'col'}= Mileage.human_attribute_name :meter_status
        %th{scope: 'col'}= Mileage.human_attribute_name :date
    %tbody
      - @mileages.each do |mileage|
        %tr
          %td= mileage.car.decorate.name
          %td= link_to mileage.meter_status, mileage
          %td= mileage.date

= paginate @mileages
