- if page.current?
  %li.page-item.active
    = content_tag :a,
      page,
      remote: remote,
      rel: rel_label(page.next?, page.prev?),
      class: 'page-link'
- else
  %li.page-item
    = link_to page,
      url, remote: remote,
      rel: rel_label(page.next?, page.prev?),
      class: 'page-link'
